<h1>UserSession#new</h1>

<%= form_for @user_session, :url => user_session_path do |f| %>
  <% if @user_session.errors.any? %>
  <div id="errorExplanation">
  	<h2><%= pluralize(@user_session.errors.count, "error") %> occured:</h2>
  	<ul>
  	<% @user_session.errors.full_messages.each do |msg| %>
  		<li><%= msg %></li>
  	<% end %>
  	</ul>
  </div>
  <% end %>

  <%= f.label :email %><br />
  <%= f.text_field :email %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password %><br />

  <br />
  Or, login with OAuth:
  <%= oauth_login_hidden_input %>
  <%= radio_button_tag :oauth_provider, 'facebook' %>
  <%= label_tag :oauth_provider_facebook, 'Facebook' %>
  <%= radio_button_tag :oauth_provider, 'linked_in' %>
  <%= label_tag :oauth_provider_linked_in, 'LinkedIn' %>
  <br />
  
  <br />
  <%= f.submit "Login" %>
<% end %>