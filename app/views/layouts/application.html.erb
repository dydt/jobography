<!DOCTYPE html>
<html>
<head>
  <title>Six470</title>
  <%= stylesheet_link_tag :all %>
  <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Inconsolata" %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'jquery-1.4.4.min.js' %>
  <%= csrf_meta_tag %>
</head>
<body>

<% if notice or alert %>
<div id="notice">
  <p><%= notice %></p>
  <p><%= alert %></p>
</div>
<% end %>

<div id="login">
  <% if user_signed_in? %>
    Hello, <%= current_user.name %> <br/>
    <%= link_to '[Log out]', destroy_user_session_path %>
  <% else %>
    <%= link_to '[Log in]', new_user_session_path %> <br />
    <%= link_to '[Log in with Facebook]', user_omniauth_authorize_path(:facebook)%>
    <%= link_to '[Log in with LinkedIn]', user_omniauth_authorize_path(:linked_in)%>
  <% end %>
</div>

<div id="header">
  <h1 id="greeting"> <%= link_to 'Welcome!', root_path %> </h1>
  <%= link_to 'User list', users_path,%>
  <%= link_to 'Job list', jobs_path,%>
</div>

<%= yield %>

<div id="footer">
  <p>Let's talk about us!</p>
</div>

</body>
</html>
