<!DOCTYPE html>
<html>
<head>
  <title>Jobography</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<% if notice or alert %>
<div id="notice">
  <p><%= notice %></p>
  <p><%= alert %></p>
</div>

<script type="text/javascript">
setTimeout(function() {
  $("div#notice").slideUp('slow')
}, 3000);
</script>

<% end %>

<div id="view">
  <%= yield %>
</div>

</body>
</html>
