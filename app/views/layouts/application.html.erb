<!DOCTYPE html>
<html>
<head>
  <title>Six470</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<% if notice or alert %>
<div id="notice">
  <p><%= notice %></p>
  <p><%= alert %></p>
</div>

<script type="text/javascript">
setTimeout(function() {
  $("div#notice").slideUp('slow')
}, 3000);
</script>

<% end %>

<div id="login">
  <% if user_signed_in? %>
    Hello, <%= current_user.name %> <br/>
    <%= link_to '[Log out]', destroy_user_session_path %>
  <% else %>
    <%= link_to '[Log in]', new_user_session_path %> / 
    <%= link_to '[Sign up]', new_user_registration_path %>
  <% end %>
</div>

<%= yield %>

<div id="footer">
  <p>Let's talk about us!</p>
</div>

</body>
</html>
