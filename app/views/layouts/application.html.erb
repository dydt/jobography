<!DOCTYPE html>
<html>
<head>
  <title>Six470</title>
  <%= stylesheet_link_tag :all %>
  <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Inconsolata" %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'jquery-1.4.4.min.js' %>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="login">
  <% if current_user %>
    Hello, <%= current_user.firstName %> <%= current_user.lastName %> <br/>
    <%= link_to 'log out', logout_path, :method => 'delete' %>
  <% else %>
    <%= link_to 'sign up'%>
    <%= link_to 'log in', login_path %>
  <% end %>
</div>

<div id="header">
  <h1 id="greeting"> <%= link_to 'Welcome!', root_path %> </h1>
  <%= link_to 'User list', users_path,%>
  <%= link_to 'Job list', jobs_path,%>
</div>

<div id="footer">
</div>

<%= yield %>

</body>
</html>
